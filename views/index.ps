<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <nav>
        <div class="logo">LOGO</div>
        <ul>
          <li>home</li>
          <li>activities</li>
          <li>new</li>
          <li>profile</li>
        </ul>
      </nav>
    </header>
    <main>
      <h1>${args.userName}$</h1>
      <h4>${args.name}$</h4>
      <span>followers : ${args.followers}$</span>
      <span>following : ${args.following}$</span>
      <section>
        <h1>POSTS</h1>
        ${args.posts.map(p=>`
        <h1>${p.tittle}</h1>
        <p>date : ${p.date}</p>
        <p>author : ${args.userName}</p>
        `)}$
      </section>
      <section>
        <h1>
          ${args.isOnline? args.userName + " is currently online":args.userName
          + " is offline" }$
        </h1>
      </section>
    </main>
  </body>
</html>
